library(igraph)
# Choosing a file to open with windows explorer to 
exampledata <- read.csv(file.choose(),header=FALSE,sep=“;”)
examplenetwork <- graph.data.frame(exampledata,directed=FALSE)
examplenetwork
plot(examplenetwork)

